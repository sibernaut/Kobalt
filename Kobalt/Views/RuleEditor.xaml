<UserControl x:Class="Kobalt.Views.RuleEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kobalt.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="S_earch for" Target="{Binding ElementName=SearchFor}"/>
            <TextBox x:Name="SearchFor" Text="{Binding SearchFor, Mode=TwoWay}"/>
            <Label Content="Re_place with" Target="{Binding ElementName=ReplaceWith}"/>
            <TextBox x:Name="ReplaceWith" Text="{Binding ReplaceWith, Mode=TwoWay}"/>
            <CheckBox Content="Regular e_xpression" IsChecked="{Binding IsRegex, Mode=TwoWay}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="_Save change" Command="{Binding Submit}"/>
            <Button Content="_Reset change" Command="{Binding Cancel}"/>
        </StackPanel>
    </Grid>
</UserControl>
